<?xml version="1.0"?>
<ruletest xmlns="http://windup.jboss.org/schema/jboss-ruleset"
          id="microprofile_removed_from_eap-test" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <testDataPath>data/appservice-sys-getenv</testDataPath>
    <!-- By default sourceMode is True, so it will only consider .java files, not .jar binaries -->
    <sourceMode>true</sourceMode>
    <rulePath>../eap-to-azure-appservice-environment-variables.windup.xml</rulePath>
    <ruleset>
        <rules>
            <rule id="eap-to-azure-appservice-environment-variables-001">
                <when>
                    <not>
                        <iterable-filter size="3">
                             <hint-exists message="App Service - The application reads environment variables*"/>
                        </iterable-filter>
                    </not>
                </when>
                <perform>
                        <fail message="[eap-to-azure-appservice-environment-variables-001] The assertion for the rule &quot;App Service - The application reads environment variables&quot; failed!" />
                </perform>
            </rule>
        </rules>
    </ruleset>
</ruletest>
