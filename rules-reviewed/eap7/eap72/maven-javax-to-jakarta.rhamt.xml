                    <tag>JakartaEE</tag>
                    <quickfix name="maven-javax-to-jakarta-00001-qf-artifactId" type="REPLACE">
                        <replacement>jakarta.mail</replacement>
                        <search>javax.mail</search>
                    </quickfix>
