<?xml version="1.0"?>
<ruleset xmlns="http://windup.jboss.org/schema/jboss-ruleset" id="caffeine-to-quarkus"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <metadata>
        <description>
            This ruleset gives hints to migrate caffeine components to Quarkus extension
        </description>
        <dependencies>
            <addon id="org.jboss.windup.rules,windup-rules-javaee,3.0.0.Final" />
            <addon id="org.jboss.windup.rules,windup-rules-java,3.0.0.Final" />
            <addon id="org.jboss.windup.rules,windup-rules-xml,3.0.0.Final" />
        </dependencies>
        <sourceTechnology id="caffeine" />
        <targetTechnology id="quarkus" />
    </metadata>
    <rules>
        <rule id="quarkus-caffeine-00000">
            <when>
                <or>
                    <project>
                        <artifact groupId="com.github.ben-manes.caffeine" artifactId="caffeine"/>
                    </project>
                    <dependency groupId="com.github.ben-manes.caffeine" artifactId="caffeine"/>
                </or>
            </when>
            <perform>
                <hint title="Replace the 'com.github.ben-manes.caffeine:caffeine' dependency with Quarkus 'quarkus-caffeine' extension" effort="1" category-id="mandatory">
                    <message>
                        Replace the `com.github.ben-manes.caffeine:caffeine` dependency with the Quarkus dependency `io.quarkus:quarkus-caffeine`  
                        Further information in the link below.
                    </message>
                    <link title="Quarkus - Guide" href="https://quarkus.io/guides/" />
                </hint>
            </perform>
        </rule>
    </rules>
</ruleset>