<?xml version="1.0"?>
<ruleset xmlns="http://windup.jboss.org/schema/jboss-ruleset" id="consul-to-quarkus"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <metadata>
        <description>
            This ruleset gives hints to migrate consul components to Quarkus extension
        </description>
        <dependencies>
            <addon id="org.jboss.windup.rules,windup-rules-javaee,3.0.0.Final" />
            <addon id="org.jboss.windup.rules,windup-rules-java,3.0.0.Final" />
            <addon id="org.jboss.windup.rules,windup-rules-xml,3.0.0.Final" />
        </dependencies>
        <sourceTechnology id="consul" />
        <targetTechnology id="quarkus" />
    </metadata>
    <rules>
        <rule id="quarkus-consul-config-00000">
            <when>
                <or>
                    <project>
                        <artifact groupId="org.apache.httpcomponents" artifactId="httpclient"/>
                    </project>
                    <dependency groupId="org.apache.httpcomponents" artifactId="httpclient"/>
                </or>
            </when>
            <perform>
                <hint title="Replace the 'org.apache.httpcomponents:httpclient' dependency with Quarkus 'quarkus-consul-config' extension" effort="1" category-id="mandatory">
                    <message>
                        Replace the `org.apache.httpcomponents:httpclient` dependency with the Quarkus dependency `io.quarkus:quarkus-consul-config`  
                        Further information in the link below.
                    </message>
                    <link title="Quarkus - Guide" href="https://quarkus.io/guides/" />
                </hint>
            </perform>
        </rule>
    </rules>
</ruleset>