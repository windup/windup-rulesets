<?xml version="1.0"?>
<ruleset xmlns="http://windup.jboss.org/schema/jboss-ruleset" id="google-to-quarkus"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <metadata>
        <description>
            This ruleset gives hints to migrate google components to Quarkus extension
        </description>
        <dependencies>
            <addon id="org.jboss.windup.rules,windup-rules-javaee,3.0.0.Final" />
            <addon id="org.jboss.windup.rules,windup-rules-java,3.0.0.Final" />
            <addon id="org.jboss.windup.rules,windup-rules-xml,3.0.0.Final" />
        </dependencies>
        <sourceTechnology id="google" />
        <targetTechnology id="quarkus" />
    </metadata>
    <rules>
        <rule id="quarkus-google-cloud-functions-http-00000">
            <when>
                <or>
                    <project>
                        <artifact groupId="com.google.cloud.functions" artifactId="functions-framework-api"/>
                    </project>
                    <dependency groupId="com.google.cloud.functions" artifactId="functions-framework-api"/>
                </or>
            </when>
            <perform>
                <hint title="Replace the 'com.google.cloud.functions:functions-framework-api' dependency with Quarkus 'quarkus-google-cloud-functions-http' extension" effort="1" category-id="mandatory">
                    <message>
                        Replace the `com.google.cloud.functions:functions-framework-api` dependency with the Quarkus dependency `io.quarkus:quarkus-google-cloud-functions-http`  
                        Further information in the link below.
                    </message>
                    <link title="Quarkus - Guide" href="https://quarkus.io/guides/gcp-functions-http" />
                </hint>
            </perform>
        </rule>
    </rules>
</ruleset>