<?xml version="1.0"?>
<ruleset xmlns="http://windup.jboss.org/schema/jboss-ruleset" id="qute-to-quarkus"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <metadata>
        <description>
            This ruleset gives hints to migrate qute components to Quarkus extension
        </description>
        <dependencies>
            <addon id="org.jboss.windup.rules,windup-rules-javaee,3.0.0.Final" />
            <addon id="org.jboss.windup.rules,windup-rules-java,3.0.0.Final" />
            <addon id="org.jboss.windup.rules,windup-rules-xml,3.0.0.Final" />
        </dependencies>
        <sourceTechnology id="qute" />
        <targetTechnology id="quarkus" />
    </metadata>
    <rules>
        <rule id="quarkus-qute-00000">
            <when>
                <or>
                    <project>
                        <artifact groupId="io.quarkus.qute" artifactId="qute-core"/>
                    </project>
                    <dependency groupId="io.quarkus.qute" artifactId="qute-core"/>
                </or>
            </when>
            <perform>
                <hint title="Replace the 'io.quarkus.qute:qute-core' dependency with Quarkus 'quarkus-qute' extension" effort="1" category-id="mandatory">
                    <message>
                        Replace the `io.quarkus.qute:qute-core` dependency with the Quarkus dependency `io.quarkus:quarkus-qute`  
                        Further information in the link below.
                    </message>
                    <link title="Quarkus - Guide" href="https://quarkus.io/guides/qute" />
                </hint>
            </perform>
        </rule>
    </rules>
</ruleset>