<?xml version="1.0"?>
<ruleset xmlns="http://windup.jboss.org/schema/jboss-ruleset" id="vertx-to-quarkus"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <metadata>
        <description>
            This ruleset gives hints to migrate vertx components to Quarkus extension
        </description>
        <dependencies>
            <addon id="org.jboss.windup.rules,windup-rules-javaee,3.0.0.Final" />
            <addon id="org.jboss.windup.rules,windup-rules-java,3.0.0.Final" />
            <addon id="org.jboss.windup.rules,windup-rules-xml,3.0.0.Final" />
        </dependencies>
        <sourceTechnology id="vertx" />
        <targetTechnology id="quarkus" />
    </metadata>
    <rules>
        <rule id="quarkus-vertx-web-00000">
            <when>
                <or>
                    <project>
                        <artifact groupId="io.quarkus.security" artifactId="quarkus-security"/>
                    </project>
                    <dependency groupId="io.quarkus.security" artifactId="quarkus-security"/>
                </or>
            </when>
            <perform>
                <hint title="Replace the 'io.quarkus.security:quarkus-security' dependency with Quarkus 'quarkus-vertx-web' extension" effort="1" category-id="mandatory">
                    <message>
                        Replace the `io.quarkus.security:quarkus-security` dependency with the Quarkus dependency `io.quarkus:quarkus-vertx-web`  
                        Further information in the link below.
                    </message>
                    <link title="Quarkus - Guide" href="https://quarkus.io/guides/reactive-routes" />
                </hint>
            </perform>
        </rule>
    </rules>
</ruleset>