<?xml version="1.0"?>
<ruleset xmlns="http://windup.jboss.org/schema/jboss-ruleset" id="smallrye-to-quarkus"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <metadata>
        <description>
            This ruleset gives hints to migrate smallrye components to Quarkus extension
        </description>
        <dependencies>
            <addon id="org.jboss.windup.rules,windup-rules-javaee,3.0.0.Final" />
            <addon id="org.jboss.windup.rules,windup-rules-java,3.0.0.Final" />
            <addon id="org.jboss.windup.rules,windup-rules-xml,3.0.0.Final" />
        </dependencies>
        <sourceTechnology id="smallrye" />
        <targetTechnology id="quarkus" />
    </metadata>
    <rules>
        <rule id="quarkus-smallrye-graphql-00000">
            <when>
                <or>
                    <project>
                        <artifact groupId="io.smallrye" artifactId="smallrye-graphql-cdi"/>
                    </project>
                    <dependency groupId="io.smallrye" artifactId="smallrye-graphql-cdi"/>
                </or>
            </when>
            <perform>
                <hint title="Replace the 'io.smallrye:smallrye-graphql-cdi' dependency with Quarkus 'quarkus-smallrye-graphql' extension" effort="1" category-id="mandatory">
                    <message>
                        Replace the `io.smallrye:smallrye-graphql-cdi` dependency with the Quarkus dependency `io.quarkus:quarkus-smallrye-graphql`  
                        Further information in the link below.
                    </message>
                    <link title="Quarkus - Guide" href="https://quarkus.io/guides/microprofile-graphql" />
                </hint>
            </perform>
        </rule>
        <rule id="quarkus-smallrye-openapi-00000">
            <when>
                <or>
                    <project>
                        <artifact groupId="io.smallrye" artifactId="smallrye-open-api-core"/>
                    </project>
                    <dependency groupId="io.smallrye" artifactId="smallrye-open-api-core"/>
                </or>
            </when>
            <perform>
                <hint title="Replace the 'io.smallrye:smallrye-open-api-core' dependency with Quarkus 'quarkus-smallrye-openapi' extension" effort="1" category-id="mandatory">
                    <message>
                        Replace the `io.smallrye:smallrye-open-api-core` dependency with the Quarkus dependency `io.quarkus:quarkus-smallrye-openapi`  
                        Further information in the link below.
                    </message>
                    <link title="Quarkus - Guide" href="https://quarkus.io/guides/openapi-swaggerui" />
                </hint>
            </perform>
        </rule>
    </rules>
</ruleset>
