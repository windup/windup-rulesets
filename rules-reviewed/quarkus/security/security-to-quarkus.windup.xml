<?xml version="1.0"?>
<ruleset xmlns="http://windup.jboss.org/schema/jboss-ruleset" id="security-to-quarkus"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <metadata>
        <description>
            This ruleset gives hints to migrate security components to Quarkus extension
        </description>
        <dependencies>
            <addon id="org.jboss.windup.rules,windup-rules-javaee,3.0.0.Final" />
            <addon id="org.jboss.windup.rules,windup-rules-java,3.0.0.Final" />
            <addon id="org.jboss.windup.rules,windup-rules-xml,3.0.0.Final" />
        </dependencies>
        <sourceTechnology id="security" />
        <targetTechnology id="quarkus" />
    </metadata>
    <rules>
        <rule id="quarkus-security-jpa-00000">
            <when>
                <or>
                    <project>
                        <artifact groupId="jakarta.persistence" artifactId="jakarta.persistence-api"/>
                    </project>
                    <dependency groupId="jakarta.persistence" artifactId="jakarta.persistence-api"/>
                </or>
            </when>
            <perform>
                <hint title="Replace the 'jakarta.persistence:jakarta.persistence-api' dependency with Quarkus 'quarkus-security-jpa' extension" effort="1" category-id="mandatory">
                    <message>
                        Replace the `jakarta.persistence:jakarta.persistence-api` dependency with the Quarkus dependency `io.quarkus:quarkus-security-jpa`  
                        Further information in the link below.
                    </message>
                    <link title="Quarkus - Guide" href="https://quarkus.io/guides/security-jpa" />
                </hint>
            </perform>
        </rule>
    </rules>
</ruleset>
