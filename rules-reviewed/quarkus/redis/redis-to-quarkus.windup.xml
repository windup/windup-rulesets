<?xml version="1.0"?>
<ruleset xmlns="http://windup.jboss.org/schema/jboss-ruleset" id="redis-to-quarkus"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <metadata>
        <description>
            This ruleset gives hints to migrate redis components to Quarkus extension
        </description>
        <dependencies>
            <addon id="org.jboss.windup.rules,windup-rules-javaee,3.0.0.Final" />
            <addon id="org.jboss.windup.rules,windup-rules-java,3.0.0.Final" />
            <addon id="org.jboss.windup.rules,windup-rules-xml,3.0.0.Final" />
        </dependencies>
        <sourceTechnology id="redis" />
        <targetTechnology id="quarkus" />
    </metadata>
    <rules>
        <rule id="quarkus-redis-client-00000">
            <when>
                <or>
                    <project>
                        <artifact groupId="io.smallrye.reactive" artifactId="smallrye-mutiny-vertx-redis-client"/>
                    </project>
                    <dependency groupId="io.smallrye.reactive" artifactId="smallrye-mutiny-vertx-redis-client"/>
                </or>
            </when>
            <perform>
                <hint title="Replace the 'io.smallrye.reactive:smallrye-mutiny-vertx-redis-client' dependency with Quarkus 'quarkus-redis-client' extension" effort="1" category-id="mandatory">
                    <message>
                        Replace the `io.smallrye.reactive:smallrye-mutiny-vertx-redis-client` dependency with the Quarkus dependency `io.quarkus:quarkus-redis-client`  
                        Further information in the link below.
                    </message>
                    <link title="Quarkus - Guide" href="https://quarkus.io/guides/redis" />
                </hint>
            </perform>
        </rule>
    </rules>
</ruleset>