<?xml version="1.0"?>
<ruleset xmlns="http://windup.jboss.org/schema/jboss-ruleset" id="resteasy-to-quarkus"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <metadata>
        <description>
            This ruleset gives hints to migrate resteasy components to Quarkus extension
        </description>
        <dependencies>
            <addon id="org.jboss.windup.rules,windup-rules-javaee,3.0.0.Final" />
            <addon id="org.jboss.windup.rules,windup-rules-java,3.0.0.Final" />
            <addon id="org.jboss.windup.rules,windup-rules-xml,3.0.0.Final" />
        </dependencies>
        <sourceTechnology id="resteasy" />
        <targetTechnology id="quarkus" />
    </metadata>
    <rules>
        <rule id="quarkus-resteasy-00000">
            <when>
                <or>
                    <project>
                        <artifact groupId="jakarta.servlet" artifactId="jakarta.servlet-api"/>
                    </project>
                    <dependency groupId="jakarta.servlet" artifactId="jakarta.servlet-api"/>
                </or>
            </when>
            <perform>
                <hint title="Replace the 'jakarta.servlet:jakarta.servlet-api' dependency with Quarkus 'quarkus-resteasy' extension" effort="1" category-id="mandatory">
                    <message>
                        Replace the `jakarta.servlet:jakarta.servlet-api` dependency with the Quarkus dependency `io.quarkus:quarkus-resteasy`  
                        Further information in the link below.
                    </message>
                    <link title="Quarkus - Guide" href="https://quarkus.io/guides/rest-json" />
                </hint>
            </perform>
        </rule>
        <rule id="quarkus-resteasy-multipart-00000">
            <when>
                <or>
                    <project>
                        <artifact groupId="org.jboss.resteasy" artifactId="resteasy-multipart-provider"/>
                    </project>
                    <dependency groupId="org.jboss.resteasy" artifactId="resteasy-multipart-provider"/>
                </or>
            </when>
            <perform>
                <hint title="Replace the 'org.jboss.resteasy:resteasy-multipart-provider' dependency with Quarkus 'quarkus-resteasy-multipart' extension" effort="1" category-id="mandatory">
                    <message>
                        Replace the `org.jboss.resteasy:resteasy-multipart-provider` dependency with the Quarkus dependency `io.quarkus:quarkus-resteasy-multipart`  
                        Further information in the link below.
                    </message>
                    <link title="Quarkus - Guide" href="https://quarkus.io/guides/" />
                </hint>
            </perform>
        </rule>
        <rule id="quarkus-resteasy-mutiny-00000">
            <when>
                <or>
                    <project>
                        <artifact groupId="org.jboss.resteasy" artifactId="resteasy-client"/>
                    </project>
                    <dependency groupId="org.jboss.resteasy" artifactId="resteasy-client"/>
                </or>
            </when>
            <perform>
                <hint title="Replace the 'org.jboss.resteasy:resteasy-client' dependency with Quarkus 'quarkus-resteasy-mutiny' extension" effort="1" category-id="mandatory">
                    <message>
                        Replace the `org.jboss.resteasy:resteasy-client` dependency with the Quarkus dependency `io.quarkus:quarkus-resteasy-mutiny`  
                        Further information in the link below.
                    </message>
                    <link title="Quarkus - Guide" href="https://quarkus.io/guides/" />
                </hint>
            </perform>
        </rule>
    </rules>
</ruleset>