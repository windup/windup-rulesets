                <technology-tag level="INFORMATIONAL">Spring Boot (embedded)</technology-tag>
            </perform>
        </rule>
        <rule id="embedded-framework-02100">
            <when>
                <file filename="spring{*}.jar"/>
            </when>
            <perform>
                <iteration>
                    <when>
                        <not>
                            <has-classification title="Spring {pattern} (embedded)"/>
                        </not>
                    </when>
                    <classification title="Embedded framework - Spring" category-id="optional" effort="0">
                        <description>The application embeds the Spring framework.</description>
                    </classification>
                    <technology-tag level="INFORMATIONAL">Spring (embedded)</technology-tag>
                </iteration>
            </perform>
            <where param="pattern">
                <matches pattern="(Integration|Data|Security|MVC|Batch|Boot|Test)"/>
            </where>
        </rule>
    </rules>
</ruleset>
