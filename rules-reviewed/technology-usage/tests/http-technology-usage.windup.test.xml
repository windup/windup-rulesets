<?xml version="1.0"?>
<ruletest xmlns="http://windup.jboss.org/schema/jboss-ruleset">
    <testDataPath>data/http/</testDataPath>
    <rulePath>../http-technology-usage.windup.xml</rulePath>
    <ruleset>
        <rules>
            <rule id="technology-usage-messaging-01000-test">
                <when>
                    <not>
                        <technology-statistics-exists name="JaxRSWebServiceModel" number-found="1">
                            <tag name="Connect"/>
                            <tag name="HTTP"/>
                            <tag name="Java EE"/>
                        </technology-statistics-exists>
                    </not>
                </when>
                <perform>
                    <fail message="JaxRSWebServiceModel Technology Statistic Not Found" />
                </perform>
            </rule>
            <rule id="technology-usage-messaging-01100-test">
                <when>
                    <not>
                        <technology-statistics-exists name="JaxWSWebServiceModel" number-found="1">
                            <tag name="Connect"/>
                            <tag name="HTTP"/>
                            <tag name="Java EE"/>
                        </technology-statistics-exists>
                    </not>
                </when>
                <perform>
                    <fail message="JaxWSWebServiceModel Technology Statistic Not Found" />
                </perform>
            </rule>
        </rules>
    </ruleset>
</ruletest>
