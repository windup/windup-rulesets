                            <replacement>org.apache.camel.support.DefaultRegistry</replacement>
                            <search>org.apache.camel.impl.{registry}</search>
                        </quickfix>
                    </hint>
                </iteration>
            </perform>
            <where param="registry">
                <matches pattern="(PropertyPlaceholderDelegateRegistry|CompositeRegistry)"/>
            </where>
        </rule>
