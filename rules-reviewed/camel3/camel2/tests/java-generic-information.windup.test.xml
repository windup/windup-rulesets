<?xml version="1.0"?>
<ruletest id="java-generic-information-tests"
          xmlns="http://windup.jboss.org/schema/jboss-ruleset"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <testDataPath>data/java-generic-information</testDataPath>
    <rulePath>../java-generic-information.windup.xml</rulePath>
    <ruleset>
        <rules>
            <rule id="java-generic-information-00000-test">
                <when>
                    <not>
                        <iterable-filter size="1">
                            <hint-exists message="The class `org.apache.camel.processor.aggregate.AggregationStrategy` has been moved to `org.apache.camel.AggregationStrategy`"/>
                        </iterable-filter>
                    </not>
                </when>
                <perform>
                    <fail message="[java-generic-information] 'AggregationStrategy' moved hint was not found!" />
                </perform>
            </rule>
            <rule id="java-generic-information-00001-test">
                <when>
                    <not>
                        <iterable-filter size="3">
                            <hint-exists message="The class `org.apache.camel.impl.*` has been moved to `org.apache.camel.support.*`*"/>
                        </iterable-filter>
                    </not>
                </when>
                <perform>
                    <fail message="[java-generic-information] 'org.apache.camel.impl' moved hint was not found!" />
                </perform>
            </rule>
            <rule id="java-generic-information-00002-test">
                <when>
                    <not>
                        <iterable-filter size="1">
                            <hint-exists message="zip` and `gzip` dataformats were renamed.*"/>
                        </iterable-filter>
                    </not>
                </when>
                <perform>
                    <fail message="[generic-information] Camel dependency moved hint was not found!"/>
                </perform>
            </rule>
            <rule id="java-generic-information-00003-test">
                <when>
                    <not>
                        <iterable-filter size="1">
                            <hint-exists message="All the classes from `org.apache.camel.util.component`*`"/>
                        </iterable-filter>
                    </not>
                </when>
                <perform>
                    <fail message="[generic-information] Camel dependency moved hint was not found!"/>
                </perform>
            </rule>
            <rule id="java-generic-information-00004-test">
                <when>
                    <not>
                        <iterable-filter size="2">
                            <hint-exists message="The class `org.apache.camel.impl.*` has been removed. Use `org.apache.camel.support.DefaultRegistry` instead."/>
                        </iterable-filter>
                    </not>
                </when>
                <perform>
                    <fail message="[generic-information] Camel dependency moved hint was not found!"/>
                </perform>
            </rule>
            <rule id="java-generic-information-00005-test">
                <when>
                    <not>
                        <iterable-filter size="1">
                            <hint-exists message="The class `org.apache.camel.processor.loadbalancer.SimpleLoadBalancerSupport` has been removed.*"/>
                        </iterable-filter>
                    </not>
                </when>
                <perform>
                    <fail message="[generic-information] Camel dependency moved hint was not found!"/>
                </perform>
            </rule>
            <rule id="java-generic-information-00006-test">
                <when>
                    <not>
                        <iterable-filter size="1">
                            <hint-exists message="The class `org.apache.camel.support.ReloadStrategySupport` has been removed."/>
                        </iterable-filter>
                    </not>
                </when>
                <perform>
                    <fail message="[generic-information] Class removed not found!"/>
                </perform>
            </rule>
            <rule id="java-generic-information-00006-test">
                <when>
                    <not>
                        <iterable-filter size="1">
                            <hint-exists message="The class `org.apache.camel.impl.FileWatcherReloadStrategy` has been removed."/>
                        </iterable-filter>
                    </not>
                </when>
                <perform>
                    <fail message="[generic-information] Class removed not found!"/>
                </perform>
            </rule>
        </rules>
    </ruleset>
</ruletest>
