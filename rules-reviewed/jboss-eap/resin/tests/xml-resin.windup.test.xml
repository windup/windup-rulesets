<?xml version="1.0"?>
<ruletest xmlns="http://windup.jboss.org/schema/jboss-ruletest" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruletest http://windup.jboss.org/schema/jboss-ruletest.xsd">
    <testDataPath>data</testDataPath>
    <rulePath>../xml-resin.windup.xml</rulePath>
    <ruleset>
        <rules>
            <rule id="xml-resin-01000-test">
                <when>
                    <not>
                        <classification-exists classification="Resin Web Application Descriptor"/>
                    </not>
                </when>
                <perform>
                    <fail message="Resin Web Application Descriptor classification is missing"/>
                </perform>
            </rule>
        </rules>
    </ruleset>
</ruletest>
