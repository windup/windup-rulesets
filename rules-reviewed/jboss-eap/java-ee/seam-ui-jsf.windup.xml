<?xml version="1.0"?>
<ruleset id="seam-ui-jsf" xmlns="http://windup.jboss.org/schema/jboss-ruleset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">

    <metadata>
        <description>
            This ruleset provides generic migration knowledge from the Seam 2 UI controls to pure JSF UI Controls
        </description>
        <dependencies>
            <addon id="org.jboss.windup.rules,windup-rules-javaee,2.3.0.Final" />
            <addon id="org.jboss.windup.rules,windup-rules-java,2.3.0.Final" />
        </dependencies>
        <sourceTechnology id="java-ee" />
        <targetTechnology id="eap" versionRange="[6,)" />
        <tag>reviewed-2015-06-30</tag>
    </metadata>

    <rules>
        <rule id="seam-ui-jsf-00000">
            <when>
                <filecontent pattern="button" filename="{*}.xhtml"/>
            </when>
            <perform>
                <hint title="Seam 2 UI control s:button found" effort="1" severity="mandatory">
                    <message>
                        You can use &lt;h:button&gt; instead of s:button.
                        There are differences in attributes like _action_ attribute maps to _outcome_ and there is no _propagation_ attribute.
                    </message>
                    <link href="https://access.redhat.com/documentation/en-US/Red_Hat_JBoss_Web_Framework_Kit/2.7/html/Seam_Guide/_seam_2_ui_controls_migration_to_jsf.html"
                        title="Seam 2 UI controls migration to JSF" />
                    <tag>Seam</tag>
                    <tag>JSF</tag>
                </hint>
            </perform>
        </rule>
        <rule id="seam-ui-jsf-01000">
            <when>
                <filecontent pattern="link" filename="{*}.xhtml"/>
            </when>
            <perform>
                <hint title="Seam 2 UI control s:link found" effort="1" severity="mandatory">
                    <message>
                        You can use &lt;h:link&gt; instead of s:link.
                        There are differences in attributes like _action_ attribute maps to _outcome_ and there is no _propagation_ attribute.
                    </message>
                    <link href="https://access.redhat.com/documentation/en-US/Red_Hat_JBoss_Web_Framework_Kit/2.7/html/Seam_Guide/_seam_2_ui_controls_migration_to_jsf.html"
                        title="Seam 2 UI controls migration to JSF" />
                    <tag>Seam</tag>
                    <tag>JSF</tag>
                </hint>
            </perform>
        </rule>
    </rules>
</ruleset>
