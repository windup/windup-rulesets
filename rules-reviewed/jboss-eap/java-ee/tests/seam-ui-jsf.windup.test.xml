<?xml version="1.0"?>
<ruletest id="seam-ui-jsf-tests" xmlns="http://windup.jboss.org/schema/jboss-ruleset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">

    <testDataPath>data</testDataPath>
    <rulePath>../</rulePath>
    <ruleset>
        <rules>
            <rule id="seam-ui-jsf-00000-test">
                <when>
                    <not>
                        <hint-exists message=".*s:button.*" />
                    </not>
                </when>
                <perform>
                    <fail message="Seam s:button not found." />
                </perform>
            </rule>
            <rule id="seam-ui-jsf-01000-test">
                <when>
                    <not>
                        <hint-exists message=".*s:link.*" />
                    </not>
                </when>
                <perform>
                    <fail message="Seam s:link not found." />
                </perform>
            </rule>            
        </rules>
    </ruleset>
</ruletest>
