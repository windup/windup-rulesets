<?xml version="1.0"?>
<ruleset id="mail"
    xmlns="http://windup.jboss.org/schema/jboss-ruleset"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <metadata>
        <description>
            This is a ruleset for detecting Mail API usage when migrating an application to a cloud environment.
        </description>
        <dependencies>
          <addon id="org.jboss.windup.rules,windup-rules-javaee,3.0.0.Final"/>
          <addon id="org.jboss.windup.rules,windup-rules-java,3.0.0.Final"/>
        </dependencies>
        <sourceTechnology id="java"/>
        <sourceTechnology id="java-ee"/>
        <targetTechnology id="cloud-readiness"/>
        <targetTechnology id="openshift"/>
        <tag>mail</tag>
    </metadata>
    <rules>
        <rule id="mail-00000">
            <when>
                    <javaclass references="javax.mail.{*}">
                        <location>CONSTRUCTOR_CALL</location>
                        <location>IMPORT</location>
                        <location>INHERITANCE</location>
                        <location>VARIABLE_DECLARATION</location>
                    </javaclass>
            </when>
            <perform>
              <hint title="JavaMail: direct access of an SMTP server" effort="3" category-id="cloud-optional">
                  <message>
                    Some cloud environments restrict output traffic on the standard SMTP ports. If large scale email processing is required, it may be better to externalize
                    this to a REST-based email service.
                </message>
                <tag>mail</tag>
              </hint>
            </perform>
        </rule>
    </rules>
</ruleset>
