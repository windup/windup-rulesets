<?xml version="1.0"?>
<ruletest id="session-test" xmlns="http://windup.jboss.org/schema/jboss-ruleset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <testDataPath>data</testDataPath>
    <rulePath>../session.windup.xml</rulePath>
    <ruleset>
        <rules>
            <rule id="session-test-00000">
                <when>
                    <not>
                        <iterable-filter size="1">
  	                      <hint-exists message="The `web.xml` deployment descriptor for a Web application*"/>
                        </iterable-filter>
                    </not>
                </when>
                <perform>
                    <fail message="'distributable' tag hint was not found" />
                </perform>
            </rule>
            <rule id="session-test-00001">
                <when>
                    <not>
                        <iterable-filter size="2">
  	                      <hint-exists message="Detect storage of custom data in Http session by*"/>
                        </iterable-filter>
                    </not>
                </when>
                <perform>
                    <fail message="Http session usage hint was not found" />
                </perform>
            </rule>
        </rules>
    </ruleset>
</ruletest>
