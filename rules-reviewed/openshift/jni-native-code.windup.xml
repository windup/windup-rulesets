<?xml version="1.0"?>
<ruleset id="jni-native-code"
    xmlns="http://windup.jboss.org/schema/jboss-ruleset"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <metadata>
        <description>
            This is a ruleset for detecting JNI native code usage usage when migrating an application to a cloud environment.
        </description>
        <dependencies>
          <addon id="org.jboss.windup.rules,windup-rules-javaee,3.0.0.Final"/>
          <addon id="org.jboss.windup.rules,windup-rules-java,3.0.0.Final"/>
        </dependencies>
        <targetTechnology id="cloud-readiness"/>
        <tag>jni</tag>
    </metadata>
    <rules>
        <rule id="jni-native-code-00000">
            <when>
                <or>
                  <javaclass references="java.lang.System.{systemNativeMethods}({*})">
                      <location>METHOD_CALL</location>
                  </javaclass>
                  <javaclass references="java.lang.Runtime.load({*})">
                      <location>METHOD_CALL</location>
                  </javaclass>
                  <javaclass references="java.lang.Runtime.loadLibrary({*})">
                      <location>METHOD_CALL</location>
                  </javaclass>
                  <javaclass references="com.sun.jna.{*}">
                      <location>CONSTRUCTOR_CALL</location>
                      <location>IMPORT</location>
                      <location>INHERITANCE</location>
                      <location>METHOD_CALL</location>
                      <location>VARIABLE_DECLARATION</location>
                  </javaclass>
                </or>
            </when>
            <perform>
              <hint title="Application uses native libraries" effort="1" category-id="cloud-potential">
                  <message>
                    The application uses native libraries.

                    Check the purpose of this usage and whether it will work with the application in a cloud environment.  
                    Also be evaluate whether to move native libraries to a JBoss EAP Module
                </message>
                <link href="https://access.redhat.com/solutions/229443" title="Including native libraries in a JBoss EAP Module"/>
                <tag>jni</tag>
              </hint>
            </perform>
            <where param="systemNativeMethods">
              <matches pattern="(load|loadLibrary|mapLibraryName)"/>
            </where>
        </rule>
  </rules>
</ruleset>
