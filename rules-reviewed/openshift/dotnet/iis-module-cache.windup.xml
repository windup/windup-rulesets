<?xml version="1.0"?>
<ruleset id="iis-module-cache"
    xmlns="http://windup.jboss.org/schema/jboss-ruleset"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <metadata>
        <description>
            This is a ruleset for .net iss module caching topics when migrating an application to cloud environments.
        </description>
        <dependencies>
            <addon id="org.jboss.windup.rules" />
        </dependencies>
        <sourceTechnology id="dotnet"/>
        <targetTechnology id="cloud-readiness"/>
        <tag>iis-module-cache</tag>
    </metadata>
    <rules>
        <rule id="iis-module-cache-0000">
            <when>
                <filecontent filename="{*}.config" pattern="TokenCacheModule"/>
            </when>
            <perform>
				<hint title="Unsupported IIS Module : Token Cache" effort="3" category-id="cloud-mandatory">
					<message>Caches windows security tokens for password based authentication schemes. Ensure compatible configuration.
					</message>
					<tag>iis-module-token-cache</tag>
				</hint>
				<technology-tag level="INFORMATIONAL">.Net</technology-tag>
            </perform>
        </rule>
		<rule id="iis-module-cache-0100">
            <when>
                <filecontent filename="{*}.config" pattern="UriCacheModule"/>
            </when>
            <perform>
				<hint title="Unsupported IIS Module : Uri Cache" effort="3" category-id="cloud-mandatory">
					<message>Implements a generic cache for URL-specific server state; such as configuration. 
					With this module; the server only reads configuration for the first request for a particular URL. And reuse it on subsequent requests until it changes.
					</message>
					<tag>iis-module-uri-cache</tag>
				</hint>
				<technology-tag level="INFORMATIONAL">.Net</technology-tag>
            </perform>
        </rule>

    </rules>
</ruleset>
