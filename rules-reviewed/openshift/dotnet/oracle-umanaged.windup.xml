<?xml version="1.0"?>
<ruleset id="oracle-umanaged"
    xmlns="http://windup.jboss.org/schema/jboss-ruleset"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <metadata>
        <description>
            This is a ruleset for .net oracle-umanaged topics when migrating an application to cloud environments.
        </description>
        <dependencies>
            <addon id="org.jboss.windup.rules" />
        </dependencies>
        <sourceTechnology id="dotnet"/>
        <targetTechnology id="cloud-readiness"/>
        <tag>DatabaseAccess</tag>
    </metadata>
    <rules>
        <rule id="oracle-umanaged-00000">
            <when>
                <filecontent filename="{*}.{cs|vb}" pattern="Oracle.DataAccess"/>
            </when>
            <perform>
				<hint title="Unmanaged Oracle Database" effort="3" category-id="cloud-mandatory">
					<message>Oracle unmanaged driver requires including binaries with app. It can use buildpack.
					</message>
					<tag>DatabaseAccess</tag>
				</hint>
				<technology-tag level="INFORMATIONAL">.Net</technology-tag>
            </perform>
        </rule>		
    </rules>
</ruleset>