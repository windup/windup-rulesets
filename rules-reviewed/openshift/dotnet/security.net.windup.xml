<?xml version="1.0"?>
<ruleset id="security.net"
    xmlns="http://windup.jboss.org/schema/jboss-ruleset"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <metadata>
        <description>
            This is a ruleset for .net security topics when migrating an application to cloud environments.
        </description>
        <dependencies>
            <addon id="org.jboss.windup.rules" />
        </dependencies>
        <sourceTechnology id="dotnet"/>
        <targetTechnology id="cloud-readiness"/>
        <tag>security</tag>
    </metadata>
    <rules>
        <rule id="security-net-00000">
            <when>
                <filecontent filename="{*}.{cs|vb}" pattern="X509Store"/>
            </when>
            <perform>
				<hint title="Security" effort="3" category-id="cloud-mandatory">
					<message>Relying on Windows certificate stores is problematic in a cloud environment.
					</message>
					<tag>security</tag>
				</hint>
				<technology-tag level="INFORMATIONAL">.Net</technology-tag>
            </perform>
        </rule>		
    </rules>
</ruleset>