<?xml version="1.0"?>
<ruleset id="transactions"
    xmlns="http://windup.jboss.org/schema/jboss-ruleset"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <metadata>
        <description>
            This is a ruleset for .net transactions topics when migrating an application to cloud environments.
        </description>
        <dependencies>
            <addon id="org.jboss.windup.rules" />
        </dependencies>
        <sourceTechnology id="dotnet"/>
        <targetTechnology id="cloud-readiness"/>
        <tag>transactions</tag>
    </metadata>
    <rules>
        <rule id="transactions-00000">
            <when>
                <filecontent filename="{*}.{cs|vb}" pattern="TransactionScope"/>
            </when>
            <perform>
				<hint title="Distributed Transactions" effort="7" category-id="cloud-mandatory">
					<message>Potential use of distributed transactions which are unsupported.
					</message>
					<tag>transactions</tag>
				</hint>
				<technology-tag level="INFORMATIONAL">.Net</technology-tag>
            </perform>
        </rule>		
    </rules>
</ruleset>