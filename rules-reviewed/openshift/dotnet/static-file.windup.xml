<?xml version="1.0"?>
<ruleset id="static-file"
    xmlns="http://windup.jboss.org/schema/jboss-ruleset"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <metadata>
        <description>
            This is a ruleset for .net iis static-file caching topics when migrating an application to cloud environments.
        </description>
        <dependencies>
            <addon id="org.jboss.windup.rules" />
        </dependencies>
        <sourceTechnology id="dotnet"/>
        <targetTechnology id="cloud-readiness"/>
        <tag>static-file</tag>
    </metadata>
    <rules>
        <rule id="static-file-0000">
            <when>
                <filecontent filename="{*}.config" pattern="StaticFileModule"/>
            </when>
            <perform>
				<hint title="Unsupported module : Static File" effort="3" category-id="cloud-mandatory">
					<message>Unsupported module : Static File
					</message>
					<tag>static-file</tag>
				</hint>
				<technology-tag level="INFORMATIONAL">.Net</technology-tag>
            </perform>
        </rule>
    </rules>
</ruleset>
