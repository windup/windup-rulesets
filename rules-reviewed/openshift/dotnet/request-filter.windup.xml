<?xml version="1.0"?>
<ruleset id="request-filter"
    xmlns="http://windup.jboss.org/schema/jboss-ruleset"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <metadata>
        <description>
            This is a ruleset for .net request-filter topics when migrating an application to cloud environments.
        </description>
        <dependencies>
            <addon id="org.jboss.windup.rules" />
        </dependencies>
        <sourceTechnology id="dotnet"/>
        <targetTechnology id="cloud-readiness"/>
        <tag>request-filter</tag>
    </metadata>
    <rules>
        <rule id="request-filter-0000">
            <when>
                <filecontent filename="{*}.config" pattern="requestFiltering"/>
            </when>
            <perform>
				<hint title="Unsupported Module : Request Filter" effort="7" category-id="cloud-mandatory">
					<message>Unsupported Module : Request Filter
					</message>
					<tag>request-filter</tag>
				</hint>
				<technology-tag level="INFORMATIONAL">.Net</technology-tag>
            </perform>
        </rule>
    </rules>
</ruleset>
