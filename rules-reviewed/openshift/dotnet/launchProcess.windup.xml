<?xml version="1.0"?>
<ruleset id="launchProcess"
    xmlns="http://windup.jboss.org/schema/jboss-ruleset"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <metadata>
        <description>
            This is a ruleset for .net Local Process topics when migrating an application to cloud environments.
        </description>
        <dependencies>
            <addon id="org.jboss.windup.rules" />
        </dependencies>
        <sourceTechnology id="dotnet"/>
        <targetTechnology id="cloud-readiness"/>
        <tag>launchProcess</tag>
    </metadata>
    <rules>
        <rule id="launchProcess-00000">
            <when>
                <filecontent filename="{*}.{cs|vb}" pattern="Process."/>
            </when>
            <perform>
				<hint title="Local Process" effort="3" category-id="cloud-mandatory">
					<message>Launching additional processes within a container is not recommended.
					</message>
					<tag>LocalProcess</tag>
				</hint>
				<technology-tag level="INFORMATIONAL">.Net</technology-tag>
            </perform>
        </rule>		
    </rules>
</ruleset>
