<?xml version="1.0"?>
<ruletest id="weblogic-xml-descriptors-tests" xmlns="http://windup.jboss.org/schema/jboss-ruletest" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruletest http://windup.jboss.org/schema/jboss-ruletest.xsd">

    <testDataPath>data</testDataPath>
    <rulePath>../hibernate-catchall.windup.xml</rulePath>
    <ruleset>
        <rules>
            <rule id="hibernate-catchall-00000-test">
                <when>
                    <not>
                        <classification-exists classification="Hibernate" />
                    </not>
                </when>
                <perform>
                    <fail message="Hibernate classification was not found!" />
                </perform>
            </rule>
        </rules>
    </ruleset>
</ruletest>
