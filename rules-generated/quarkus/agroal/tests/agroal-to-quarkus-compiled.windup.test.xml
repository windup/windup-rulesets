<?xml version="1.0"?>
<ruletest id="agroal-to-quarkus-compiled-tests"
          xmlns="http://windup.jboss.org/schema/jboss-ruleset"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <testDataPath>data/</testDataPath>
    <sourceMode>false</sourceMode>
    <rulePath>../agroal-to-quarkus.windup.xml</rulePath>
    <ruleset>
        <rules>
            <rule id="quarkus-agroal-00000-compiled-test">
                <when>
                    <not>
                        <iterable-filter size="1">
                            <hint-exists message="Replace the `io.agroal:agroal-api` dependency with the Quarkus dependency.*"/>
                        </iterable-filter>
                    </not>
                </when>
                <perform>
                    <fail message="[quarkus-agroal-compiled] quarkus-agroal Quarkus extension hint was not found!" />
                </perform>
            </rule>
        </rules>
    </ruleset>
</ruletest>
