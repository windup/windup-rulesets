<?xml version="1.0"?>
<ruletest id="resteasy-to-quarkus-uberJar-with-quarkus-tests"
          xmlns="http://windup.jboss.org/schema/jboss-ruleset"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <testDataPath>data/resteasy-uberJar-with-quarkus.jar</testDataPath>
    <sourceMode>false</sourceMode>
    <rulePath>../resteasy-to-quarkus.windup.xml</rulePath>
    <rulePath>../resteasy-to-quarkus.windup.groovy</rulePath>
    <ruleset>
        <rules>
            <rule id="quarkus-resteasy-00000-uberJar-with-quarkus-compiled-test">
                <when>
                    <not>
                        <iterable-filter size="0">
                            <hint-exists message="A folder path related to a package from the `jakarta.servlet:jakarta.servlet-api` dependency has been found.*"/>
                        </iterable-filter>
                    </not>
                </when>
                <perform>
                    <fail message="[quarkus-resteasy-groovy-compiled] quarkus-resteasy Quarkus extension hint was not found!" />
                </perform>
            </rule>
        </rules>
    </ruleset>
</ruletest>
