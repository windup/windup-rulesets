<?xml version="1.0"?>
<ruletest id="resteasy-to-quarkus-tests"
          xmlns="http://windup.jboss.org/schema/jboss-ruleset"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <testDataPath>data/</testDataPath>
    <rulePath>../resteasy-to-quarkus.windup.xml</rulePath>
    <ruleset>
        <rules>
            <rule id="quarkus-resteasy-00000-test">
                <when>
                    <not>
                        <iterable-filter size="2">
                            <hint-exists message="Replace the `jakarta.servlet:jakarta.servlet-api` dependency with the Quarkus dependency.*"/>
                        </iterable-filter>
                    </not>
                </when>
                <perform>
                    <fail message="[quarkus-resteasy] quarkus-resteasy Quarkus extension hint was not found!" />
                </perform>
            </rule>
            <rule id="quarkus-resteasy-multipart-00000-test">
                <when>
                    <not>
                        <iterable-filter size="2">
                            <hint-exists message="Replace the `org.jboss.resteasy:resteasy-multipart-provider` dependency with the Quarkus dependency.*"/>
                        </iterable-filter>
                    </not>
                </when>
                <perform>
                    <fail message="[quarkus-resteasy-multipart] quarkus-resteasy-multipart Quarkus extension hint was not found!" />
                </perform>
            </rule>
            <rule id="quarkus-resteasy-mutiny-00000-test">
                <when>
                    <not>
                        <iterable-filter size="2">
                            <hint-exists message="Replace the `org.jboss.resteasy:resteasy-client` dependency with the Quarkus dependency.*"/>
                        </iterable-filter>
                    </not>
                </when>
                <perform>
                    <fail message="[quarkus-resteasy-mutiny] quarkus-resteasy-mutiny Quarkus extension hint was not found!" />
                </perform>
            </rule>
        </rules>
    </ruleset>
</ruletest>
