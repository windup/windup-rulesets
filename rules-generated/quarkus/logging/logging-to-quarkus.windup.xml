<?xml version="1.0"?>
<ruleset xmlns="http://windup.jboss.org/schema/jboss-ruleset" id="logging-to-quarkus"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <metadata>
        <description>
            This ruleset gives hints to migrate logging components to Quarkus extension
        </description>
        <dependencies>
            <addon id="org.jboss.windup.rules,windup-rules-javaee,3.0.0.Final" />
            <addon id="org.jboss.windup.rules,windup-rules-java,3.0.0.Final" />
            <addon id="org.jboss.windup.rules,windup-rules-xml,3.0.0.Final" />
        </dependencies>
        <sourceTechnology id="logging" />
        <targetTechnology id="quarkus" />
    </metadata>
    <rules>
        <rule id="quarkus-logging-gelf-00000">
            <when>
                <graph-query discriminator="WindupJavaConfigurationModel" as="discard">
                    <property type="BOOLEAN" name="sourceMode">true</property>
                </graph-query>
                <project>
                    <artifact groupId="biz.paluch.logging" artifactId="logstash-gelf"/>
                </project>
            </when>
            <perform>
                <iteration over="default">
                    <hint title="Replace the 'logstash-gelf' dependency with Quarkus 'quarkus-logging-gelf' extension" effort="1" category-id="mandatory">
                        <message>
                            Replace the `biz.paluch.logging:logstash-gelf` dependency with the Quarkus dependency `io.quarkus:quarkus-logging-gelf`  
                            Further information in the link below.
                        </message>
                        <link title="Quarkus - Guide" href="https://quarkus.io/guides/centralized-log-management" />
                    </hint>
                </iteration>
            </perform>
        </rule>
        <rule id="quarkus-logging-gelf-00010">
            <when>
                <dependency groupId="biz.paluch.logging" artifactId="logstash-gelf"/>
            </when>
            <perform>
                <hint title="Replace the 'logstash-gelf' dependency with Quarkus 'quarkus-logging-gelf' extension" effort="1" category-id="mandatory">
                    <message>
                        Replace the `biz.paluch.logging:logstash-gelf` dependency with the Quarkus dependency `io.quarkus:quarkus-logging-gelf`  
                        Further information in the link below.
                    </message>
                    <link title="Quarkus - Guide" href="https://quarkus.io/guides/centralized-log-management" />
                </hint>
            </perform>
        </rule>
        <rule id="quarkus-logging-gelf-00020">
            <when>
                <javaclass references="biz.paluch.logging.{fileName}" >
                    <location>IMPORT</location>
                </javaclass>
            </when>
            <perform>
                <hint title="Replace the 'logstash-gelf' dependency with Quarkus 'quarkus-logging-gelf' extension" effort="1" category-id="mandatory">
                    <message>
                        Replace the `biz.paluch.logging:logstash-gelf` dependency with the Quarkus dependency `io.quarkus:quarkus-logging-gelf`  
                        Further information in the link below.
                    </message>
                    <link title="Quarkus - Guide" href="https://quarkus.io/guides/centralized-log-management" />
                </hint>
            </perform>
            <where param="fileName">
                <!-- from https://docs.oracle.com/javase/specs/jls/se11/html/jls-3.html#jls-3.8 -->
                <matches pattern="[a-zA-Z_$*][a-zA-Z0-9_$]*" />
            </where>
        </rule>
        <rule id="quarkus-logging-json-00000">
            <when>
                <graph-query discriminator="WindupJavaConfigurationModel" as="discard">
                    <property type="BOOLEAN" name="sourceMode">true</property>
                </graph-query>
                <project>
                    <artifact groupId="org.jboss.logmanager" artifactId="jboss-logmanager-embedded"/>
                </project>
            </when>
            <perform>
                <iteration over="default">
                    <hint title="Replace the 'jboss-logmanager-embedded' dependency with Quarkus 'quarkus-logging-json' extension" effort="1" category-id="mandatory">
                        <message>
                            Replace the `org.jboss.logmanager:jboss-logmanager-embedded` dependency with the Quarkus dependency `io.quarkus:quarkus-logging-json`  
                            Further information in the link below.
                        </message>
                        <link title="Quarkus - Guide" href="https://quarkus.io/guides/logging#json-logging" />
                    </hint>
                </iteration>
            </perform>
        </rule>
        <rule id="quarkus-logging-json-00010">
            <when>
                <dependency groupId="org.jboss.logmanager" artifactId="jboss-logmanager-embedded"/>
            </when>
            <perform>
                <hint title="Replace the 'jboss-logmanager-embedded' dependency with Quarkus 'quarkus-logging-json' extension" effort="1" category-id="mandatory">
                    <message>
                        Replace the `org.jboss.logmanager:jboss-logmanager-embedded` dependency with the Quarkus dependency `io.quarkus:quarkus-logging-json`  
                        Further information in the link below.
                    </message>
                    <link title="Quarkus - Guide" href="https://quarkus.io/guides/logging#json-logging" />
                </hint>
            </perform>
        </rule>
        <rule id="quarkus-logging-json-00020">
            <when>
                <javaclass references="org.jboss.logmanager.{fileName}" >
                    <location>IMPORT</location>
                </javaclass>
            </when>
            <perform>
                <hint title="Replace the 'jboss-logmanager-embedded' dependency with Quarkus 'quarkus-logging-json' extension" effort="1" category-id="mandatory">
                    <message>
                        Replace the `org.jboss.logmanager:jboss-logmanager-embedded` dependency with the Quarkus dependency `io.quarkus:quarkus-logging-json`  
                        Further information in the link below.
                    </message>
                    <link title="Quarkus - Guide" href="https://quarkus.io/guides/logging#json-logging" />
                </hint>
            </perform>
            <where param="fileName">
                <!-- from https://docs.oracle.com/javase/specs/jls/se11/html/jls-3.html#jls-3.8 -->
                <matches pattern="[a-zA-Z_$*][a-zA-Z0-9_$]*" />
            </where>
        </rule>
        <rule id="quarkus-logging-sentry-00000">
            <when>
                <graph-query discriminator="WindupJavaConfigurationModel" as="discard">
                    <property type="BOOLEAN" name="sourceMode">true</property>
                </graph-query>
                <project>
                    <artifact groupId="io.sentry" artifactId="sentry"/>
                </project>
            </when>
            <perform>
                <iteration over="default">
                    <hint title="Replace the 'sentry' dependency with Quarkus 'quarkus-logging-sentry' extension" effort="1" category-id="mandatory">
                        <message>
                            Replace the `io.sentry:sentry` dependency with the Quarkus dependency `io.quarkus:quarkus-logging-sentry`  
                            Further information in the link below.
                        </message>
                        <link title="Quarkus - Guide" href="https://quarkus.io/guides/logging-sentry" />
                    </hint>
                </iteration>
            </perform>
        </rule>
        <rule id="quarkus-logging-sentry-00010">
            <when>
                <dependency groupId="io.sentry" artifactId="sentry"/>
            </when>
            <perform>
                <hint title="Replace the 'sentry' dependency with Quarkus 'quarkus-logging-sentry' extension" effort="1" category-id="mandatory">
                    <message>
                        Replace the `io.sentry:sentry` dependency with the Quarkus dependency `io.quarkus:quarkus-logging-sentry`  
                        Further information in the link below.
                    </message>
                    <link title="Quarkus - Guide" href="https://quarkus.io/guides/logging-sentry" />
                </hint>
            </perform>
        </rule>
        <rule id="quarkus-logging-sentry-00020">
            <when>
                <javaclass references="io.sentry.{fileName}" >
                    <location>IMPORT</location>
                </javaclass>
            </when>
            <perform>
                <hint title="Replace the 'sentry' dependency with Quarkus 'quarkus-logging-sentry' extension" effort="1" category-id="mandatory">
                    <message>
                        Replace the `io.sentry:sentry` dependency with the Quarkus dependency `io.quarkus:quarkus-logging-sentry`  
                        Further information in the link below.
                    </message>
                    <link title="Quarkus - Guide" href="https://quarkus.io/guides/logging-sentry" />
                </hint>
            </perform>
            <where param="fileName">
                <!-- from https://docs.oracle.com/javase/specs/jls/se11/html/jls-3.html#jls-3.8 -->
                <matches pattern="[a-zA-Z_$*][a-zA-Z0-9_$]*" />
            </where>
        </rule>
    </rules>
</ruleset>
