<?xml version="1.0"?>
<ruletest id="oidc-to-quarkus-uberJar-with-quarkus-tests"
          xmlns="http://windup.jboss.org/schema/jboss-ruleset"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <testDataPath>data/oidc-uberJar-with-quarkus.jar</testDataPath>
    <sourceMode>false</sourceMode>
    <rulePath>../oidc-to-quarkus.windup.xml</rulePath>
    <rulePath>../oidc-to-quarkus.windup.groovy</rulePath>
    <ruleset>
        <rules>
            <rule id="quarkus-oidc-token-propagation-00000-uberJar-with-quarkus-compiled-test">
                <when>
                    <not>
                        <iterable-filter size="0">
                            <hint-exists message="A folder path related to a package from the `org.eclipse.microprofile.jwt:microprofile-jwt-auth-api` dependency has been found.*"/>
                        </iterable-filter>
                    </not>
                </when>
                <perform>
                    <fail message="[quarkus-oidc-token-propagation-groovy-compiled] quarkus-oidc-token-propagation Quarkus extension hint was not found!" />
                </perform>
            </rule>
        </rules>
    </ruleset>
</ruletest>
