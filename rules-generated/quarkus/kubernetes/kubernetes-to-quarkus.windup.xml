<?xml version="1.0"?>
<ruleset xmlns="http://windup.jboss.org/schema/jboss-ruleset" id="kubernetes-to-quarkus"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <metadata>
        <description>
            This ruleset gives hints to migrate kubernetes components to Quarkus extension
        </description>
        <dependencies>
            <addon id="org.jboss.windup.rules,windup-rules-javaee,3.0.0.Final" />
            <addon id="org.jboss.windup.rules,windup-rules-java,3.0.0.Final" />
            <addon id="org.jboss.windup.rules,windup-rules-xml,3.0.0.Final" />
        </dependencies>
        <sourceTechnology id="kubernetes" />
        <targetTechnology id="quarkus" />
    </metadata>
    <rules>
        <rule id="quarkus-kubernetes-client-00000">
            <when>
                <project>
                    <artifact groupId="io.fabric8" artifactId="kubernetes-client"/>
                </project>
            </when>
            <perform>
                <hint title="Replace the 'kubernetes-client' dependency with Quarkus 'quarkus-kubernetes-client' extension" effort="1" category-id="mandatory">
                    <message>
                        Replace the `io.fabric8:kubernetes-client` dependency with the Quarkus dependency `io.quarkus:quarkus-kubernetes-client`  
                        Further information in the link below.
                    </message>
                    <link title="Quarkus - Guide" href="https://quarkus.io/guides/kubernetes-client" />
                </hint>
            </perform>
        </rule>
        <rule id="quarkus-kubernetes-client-00010">
            <when>
                <dependency groupId="io.fabric8" artifactId="kubernetes-client"/>
            </when>
            <perform>
                <hint title="Replace the 'kubernetes-client' dependency with Quarkus 'quarkus-kubernetes-client' extension" effort="1" category-id="mandatory">
                    <message>
                        Replace the `io.fabric8:kubernetes-client` dependency with the Quarkus dependency `io.quarkus:quarkus-kubernetes-client`  
                        Further information in the link below.
                    </message>
                    <link title="Quarkus - Guide" href="https://quarkus.io/guides/kubernetes-client" />
                </hint>
            </perform>
        </rule>
        <rule id="quarkus-kubernetes-client-00020">
            <when>
                <javaclass references="io.fabric8.kubernetes.client.{fileName}" >
                    <location>IMPORT</location>
                </javaclass>
            </when>
            <perform>
                <hint title="Replace the 'kubernetes-client' dependency with Quarkus 'quarkus-kubernetes-client' extension" effort="1" category-id="mandatory">
                    <message>
                        Replace the `io.fabric8:kubernetes-client` dependency with the Quarkus dependency `io.quarkus:quarkus-kubernetes-client`  
                        Further information in the link below.
                    </message>
                    <link title="Quarkus - Guide" href="https://quarkus.io/guides/kubernetes-client" />
                </hint>
            </perform>
            <where param="fileName">
                <!-- from https://docs.oracle.com/javase/specs/jls/se11/html/jls-3.html#jls-3.8 -->
                <matches pattern="[a-zA-Z_$*][a-zA-Z0-9_$]*" />
            </where>
        </rule>
    </rules>
</ruleset>
