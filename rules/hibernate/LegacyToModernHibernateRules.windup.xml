                <iteration>
                    <hint message="Deprecated by Hibernate 3, moved to org.hibernate.classic -- use createQuery()" effort="2">
                    </hint>
                </iteration>
            </perform>
        </rule>
        <rule id="LegacyHibernateRules_6bcvk">
            <when>
                <javaclass references="net.sf.hibernate.Session.filter{*}" as="default">
