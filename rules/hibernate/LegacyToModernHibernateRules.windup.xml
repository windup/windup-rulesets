<?xml version="1.0"?>
<ruleset xmlns="http://windup.jboss.org/ns/ruleset/2.3.0.Final"  id="LegacyHibernateRules"  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"     xsi:schemaLocation="http://windup.jboss.org/ns/ruleset/2.3.0.Final http://windup.jboss.org/schema/windup-ruleset-2.3.0.Final.xsd"> 
    <rules>
        <rule id="LegacyHibernateRules_2fmb">
            <when>
                <javaclass references="net.sf.hibernate.Session.find{*}" as="default">
                    <location>METHOD_CALL</location>
                </javaclass>
            </when>
            <perform>
                <iteration>
                    <hint message="Deprecated by Hibernate 3, moved to org.hibernate.classic -- use createQuery()" effort="2">
                    </hint>
                </iteration>
            </perform>
        </rule>
        <rule id="LegacyHibernateRules_4mthy">
            <when>
                <javaclass references="net.sf.hibernate.Session.iterate{*}" as="default">
