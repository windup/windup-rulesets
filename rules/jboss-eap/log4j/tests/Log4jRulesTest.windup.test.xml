<?xml version="1.0"?>
<ruletest xmlns="http://windup.jboss.org/schema/jboss-ruleset">
	<testDataPath>data</testDataPath>
	<rulePath>../Log4jRules.windup.xml</rulePath>
	<ruleset>
		<rules>
			<rule>
				<when>
					<not>
						<lineitem-exists message="Use log4j module via jboss-deployment-structure.xml"/>
					</not>
				</when>
				<perform>
					<fail message="Log4j artifact not found!"/>					
				</perform>
			</rule>
			<rule>
                <when>
                    <not>
                        <classification-exists title="Log4j specific configuration in log4j.properties"/>
                    </not>
                </when>
                <perform>
                    <fail message="log4j.properties file not found!"/>                    
                </perform>
            </rule>
            <rule>
                <when>
                    <not>
                        <classification-exists title="Log4j specific configuration in log4j.xml"/>
                    </not>
                </when>
                <perform>
                    <fail message="log4j.xml file config not found!"/>                    
                </perform>
            </rule>
		</rules>
	</ruleset>
</ruletest>
