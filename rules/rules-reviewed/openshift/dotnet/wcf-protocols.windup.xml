<?xml version="1.0"?>
<ruleset id="wcf-protocols"
    xmlns="http://windup.jboss.org/schema/jboss-ruleset"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <metadata>
        <description>
            This is a ruleset for .net wcf-protocols topics when migrating an application to cloud environments.
        </description>
        <dependencies>
            <addon id="org.jboss.windup.rules,windup-rules-base" />
        </dependencies>
        <sourceTechnology id="dotnet"/>
        <targetTechnology id="cloud-readiness"/>
        <tag>wcf-protocols</tag>
    </metadata>
    <rules>
        <rule id="wcf-protocols-00000">
            <when>
                <filecontent filename="{*}.{cs|vb}" pattern="{Net\w+Binding}"/>
            </when>			
            <perform>
				<hint title="Unsupported Net Protocols" effort="7" category-id="cloud-mandatory">
					<message>Non HTTP based protocols are either unsupported or require extensive refactoring on Cloud. TCP binding would require TCP Router to be configured and app to be self hosted</message>
					<tag>wcf-protocols-net</tag>
				</hint>
				<technology-tag level="INFORMATIONAL">.Net</technology-tag>
            </perform>
        </rule>
		<rule id="wcf-protocols-01000">
            <when>
                <filecontent filename="{*}.{cs|vb}" pattern="{WS\w+Binding}"/>
            </when>
            <perform>
				<hint title="Unsupported WS Protocols" effort="5" category-id="cloud-mandatory">
					<message>Many features of WS protocols are problematic in the cloud like distributed transactions and reliable sessions</message>
					<tag>wcf-protocols-ws</tag>
				</hint>
				<technology-tag level="INFORMATIONAL">.Net</technology-tag>
            </perform>
        </rule>
    </rules>
</ruleset>