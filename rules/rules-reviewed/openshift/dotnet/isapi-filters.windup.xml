<?xml version="1.0"?>
<ruleset id="isapi-filters"
    xmlns="http://windup.jboss.org/schema/jboss-ruleset"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <metadata>
        <description>
            This is a ruleset for .net isapi-filters topics when migrating an application to cloud environments.
        </description>
        <dependencies>
            <addon id="org.jboss.windup.rules,windup-rules-base" />
        </dependencies>
        <sourceTechnology id="dotnet"/>
        <targetTechnology id="cloud-readiness"/>
        <tag>isapi-filters</tag>
    </metadata>
    <rules>
        <rule id="isapi-filters-00000">
            <when>
                <filecontent filename="{*}.{cs|vb}" pattern="{GetSection\(.system\.webServer\/isapiFilters.\)}"/>
            </when>			
            <perform>
				<hint title="Unsupported IIS module : ISAPI Filters" effort="13" category-id="cloud-mandatory">
					<message>Unsupported IIS module : ISAPI Filters</message>
					<tag>isapi-filters</tag>
				</hint>
				<technology-tag level="INFORMATIONAL">.Net</technology-tag>
            </perform>
        </rule>
		<rule id="isapi-filters-01000">
            <when>
                <filecontent filename="{*}.config" pattern="isapiFilters"/>
            </when>			
            <perform>
				<hint title="Unsupported IIS module : ISAPI Filters" effort="13" category-id="cloud-mandatory">
					<message>Unsupported IIS module : ISAPI Filters</message>
					<tag>isapi-filters</tag>
				</hint>
				<technology-tag level="INFORMATIONAL">.Net</technology-tag>
            </perform>
        </rule>
    </rules>
</ruleset>