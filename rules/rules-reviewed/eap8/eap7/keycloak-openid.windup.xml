<?xml version="1.0"?>
<ruleset xmlns="http://windup.jboss.org/schema/jboss-ruleset" id="keycloak-oidc"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <metadata>
        <description>
            This ruleset provides analysis of Java EE applications that need to change their configuration to migrate from Keycloak to native EAP OpenID Connect support
        </description>
        <dependencies>
            <addon id="org.jboss.windup.rules,windup-rules-javaee,3.0.0.Final" />
            <addon id="org.jboss.windup.rules,windup-rules-java,3.0.0.Final" />
        </dependencies>
        <sourceTechnology id="eap" versionRange="[7,)" />
        <targetTechnology id="eap" versionRange="[8,)" />
    </metadata>
    <rules>
        <rule id="keycloak-openid-00001">
            <when>
                <xmlfile matches="//*/j:auth-method[text()='KEYCLOAK']" in="web.xml">
                    <namespace prefix="j" uri="http://java.sun.com/xml/ns/javaee"/>
                </xmlfile>
            </when>
            <perform>
                <hint title="Update the auth-method configuration from KEYCLOAK to OIDC" effort="1" category-id="mandatory">
                    <message>In order to add support for EAP native OpenID Connect, the `auth-method` must be updated to `OIDC`.</message>
                </hint>
            </perform>
        </rule>
        <rule id="keycloak-openid-00002">
            <when>
                <file filename="keycloak.json"/>
            </when>
            <perform>
                <hint title="Rename keycloak.json to oidc.json" effort="1" category-id="mandatory">
                    <message>In order to add support for EAP native OpenID Connect, the `keycloak.json` configuration file in the WEB-INF folder needs to be renamed to `oidc.json`.</message>
                </hint>
            </perform>
        </rule>
    </rules>
</ruleset>
