<?xml version="1.0"?>
<ruletest id="javax-to-jakarta-properties-tests"
          xmlns="http://windup.jboss.org/schema/jboss-ruleset"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <testDataPath>data/properties</testDataPath>
    <rulePath>../javax-to-jakarta-properties.windup.xml</rulePath>
    <ruleset>
        <rules>
            <rule id="javax-to-jakarta-properties-00001-test">
                <when>
                    <not>
                        <iterable-filter size="3"> 
                            <hint-exists message="Rename properties prefixed by `javax` with `jakarta`"/>
                        </iterable-filter>
                    </not>
                </when>
                <perform>
                    <fail message="[javax-to-jakarta-properties-00001] The hint was not found!" />
                </perform>
            </rule>
        </rules>
    </ruleset>
</ruletest>
