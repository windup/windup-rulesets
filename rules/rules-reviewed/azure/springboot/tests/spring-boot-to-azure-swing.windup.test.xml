<?xml version="1.0spring-boot-to-azure-swing"?>
<ruletest id="spring-boot-to-azure-swing-test" xmlns="http://windup.jboss.org/schema/jboss-ruleset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <testDataPath>data/spring-boot-to-azure-swing</testDataPath>
    <rulePath>../spring-boot-to-azure-swing.windup.xml</rulePath>
    <ruleset>
        <rules>
            <rule id="spring-boot-to-azure-swing-test-01000">
                <when>
                    <not>
                        <iterable-filter size="3">
                            <hint-exists message="The application uses Java Swing." />
                        </iterable-filter>
                    </not>
                </when>
                <perform>
                    <fail message="Swing hint was not found!" />
                </perform>
            </rule>
        </rules>
    </ruleset>
</ruletest>