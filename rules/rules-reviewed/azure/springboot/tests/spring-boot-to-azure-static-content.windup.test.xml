<?xml version="1.0"?>
<ruletest id="spring-boot-to-azure-static-content-test" xmlns="http://windup.jboss.org/schema/jboss-ruleset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <testDataPath>data/spring-boot-to-azure-static-content</testDataPath>
    <rulePath>../spring-boot-to-azure-static-content.windup.xml</rulePath>
    <ruleset>
        <rules>
            <rule id="spring-boot-to-azure-static-content-test-01000">
                <when>
                    <not>
                        <iterable-filter size="6">
                            <hint-exists message="Your application currently serves static content" />
                        </iterable-filter>
                    </not>
                </when>
                <perform>
                    <fail message="Static content hint was not found!" />
                </perform>
            </rule>
        </rules>
    </ruleset>
</ruletest>