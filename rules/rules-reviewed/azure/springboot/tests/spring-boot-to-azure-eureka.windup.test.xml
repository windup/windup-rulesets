<?xml version="1.0"?>
<ruletest id="spring-boot-to-azure-eureka-test" xmlns="http://windup.jboss.org/schema/jboss-ruleset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <testDataPath>data/spring-boot-to-azure-eureka</testDataPath>
    <rulePath>../spring-boot-to-azure-eureka.windup.xml</rulePath>
    <ruleset>
        <rules>
            <rule id="spring-boot-to-azure-eureka-test-01000">
                <when>
                    <not>
                        <iterable-filter size="3">
                            <hint-exists message="The application uses Eureka." />
                        </iterable-filter>
                    </not>
                </when>
                <perform>
                    <fail message="Eureka hint was not found!" />
                </perform>
            </rule>
        </rules>
    </ruleset>
</ruletest>