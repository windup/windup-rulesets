                <classification title="Embedded library - JBossMQ Client" category-id="information" effort="0">
                    <description>The application embeds a JBossMQ client library.</description>
                </classification>
                <technology-tag level="INFORMATIONAL">JBossMQ Client</technology-tag>
            </perform>
        </rule>
        <rule id="connect-02700">
            <when>
                <file filename="{*}zbus-client{*}"/>
            </when>
            <perform>
                <classification title="Embedded library - Zbus Client" category-id="information" effort="0">
                    <description>The application embeds a Zbus client library.</description>
                </classification>
                <technology-tag level="INFORMATIONAL">Zbus Client</technology-tag>
            </perform>
        </rule>
        <rule id="connect-02800">
            <when>
                <file filename="{*}qpid{*}"/>
            </when>
            <perform>
                <classification title="Embedded library - Qpid Client" category-id="information" effort="0">
                    <description>The application embeds a Qpid client library.</description>
                </classification>
                <technology-tag level="INFORMATIONAL">Qpid Client</technology-tag>
            </perform>
        </rule>
        <rule id="connect-02900">
            <when>
                <or>
                    <file filename="{*}kafka-clients{*}"/>
                    <file filename="{*}spring-kafka{*}"/>
                </or>
            </when>
            <perform>
                <classification title="Embedded library - Kafka Client" category-id="information" effort="0">
                    <description>The application embeds a Kafka client library.</description>
                </classification>
                <technology-tag level="INFORMATIONAL">Kafka Client</technology-tag>
            </perform>
        </rule>
    </rules>
</ruleset>
