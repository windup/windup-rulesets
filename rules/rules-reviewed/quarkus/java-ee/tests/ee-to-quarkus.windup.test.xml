<?xml version="1.0"?>
<ruletest id="ee-to-quarkus-tests"
          xmlns="http://windup.jboss.org/schema/jboss-ruleset"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <testDataPath>data/ee-to-quarkus</testDataPath>
    <rulePath>../ee-to-quarkus.windup.xml</rulePath>
    <ruleset>
        <rules>
            <rule id="ee-to-quarkus-00000-test">
                <when>
                    <not>
                        <iterable-filter size="2">
                            <hint-exists message="Stateless EJBs can be converted to a CDI bean by replacing the `@Stateless` annotation with a scope eg `@ApplicationScoped`"/>
                        </iterable-filter>
                    </not>
                </when>
                <perform>
                    <fail message="[ee-to-quarkus-00000] Hint was not found or the number of hints did not match." />
                </perform>
            </rule>
            <rule id="ee-to-quarkus-00010-test">
                <when>
                    <not>
                        <iterable-filter size="3">
                            <hint-exists message="Stateful EJBs can be converted to a CDI bean by replacing the `@Stateful` annotation with a bean-defining annotation*"/>
                        </iterable-filter>
                    </not>
                </when>
                <perform>
                    <fail message="[ee-to-quarkus-00010] Hint was not found or the number of hints did not match." />
                </perform>
            </rule>
            <rule id="ee-to-quarkus-00020-test">
                <when>
                    <not>
                        <iterable-filter size="5">
                            <hint-exists message="Any EJB method has container-manager transactions by default, with transaction attribute*"/>
                        </iterable-filter>
                    </not>
                </when>
                <perform>
                    <fail message="[ee-to-quarkus-00020] Hint was not found or the number of hints did not match." />
                </perform>
            </rule>
        </rules>
    </ruleset>
</ruletest>
