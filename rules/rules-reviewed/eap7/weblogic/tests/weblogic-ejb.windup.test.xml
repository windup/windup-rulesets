<?xml version="1.0"?>
<ruletest id="weblogic-ejb-tests" xmlns="http://windup.jboss.org/schema/jboss-ruleset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <testDataPath>data-ejb</testDataPath>
    <rulePath>../</rulePath>
    <ruleset>
        <rules>
            <rule id="weblogic-ejb-01000-test">
                <when>
                    <not>
                        <hint-exists message="This application contains WebLogic EJBs probably generated by the WebLogic Server EJB tools" />
                    </not>
                </when>
                <perform>
                    <fail message="WebLogic Server EJB tools not found." />
                </perform>
            </rule>
            <rule id="weblogic-ejb-02000-test">
                <when>
                    <not>
                        <hint-exists message="This application contains WebLogic proprietary `weblogic.javaee.TransactionTimeoutSeconds` annotation" />
                    </not>
                </when>
                <perform>
                    <fail message="WebLogic proprietary timeout for transactions annotation not found." />
                </perform>
            </rule>
            <rule id="weblogic-ejb-03000-test">
                <when>
                    <not>
                        <hint-exists message="This application contains WebLogic proprietary `weblogic.ejbgen.MessageDriven` annotation" />
                    </not>
                </when>
                <perform>
                    <fail message="WebLogic proprietary MessageDriven annotation hint not found." />
                </perform>
            </rule>
            <rule id="weblogic-ejb-04000-test">
                <when>
                    <not>
                        <hint-exists message="This class extends `weblogic.ejb." />
                    </not>
                </when>
                <perform>
                    <fail message="WebLogic proprietary EJB Bean hint not found." />
                </perform>
            </rule>
        </rules>
    </ruleset>
</ruletest>