<?xml version="1.0"?>
<ruleset xmlns="http://windup.jboss.org/schema/jboss-ruleset" id="XmlFileMappings" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">

    <metadata>
        <description>
            This rule set configures the organization matching functionality, using known root-package prefixes to identify libraries and other code.
        </description>
        <dependencies>
            <addon id="org.jboss.windup.rules,windup-rules-base,2.3.0.Final"/>
        </dependencies>
    </metadata>

    <rules>
        <file-mapping from=".*\.tld$" to="XmlFileModel" id="xmlfilemappings-0100" />
        <file-mapping from=".*\.bpel$" to="XmlFileModel" id="xmlfilemappings-0200" />
        <file-mapping from=".*\.wsdl$" to="XmlFileModel" id="xmlfilemappings-0300" />
        <file-mapping from=".*\.wsdd$" to="XmlFileModel" id="xmlfilemappings-0400" />
        <file-mapping from=".*\.bpelex$" to="XmlFileModel" id="xmlfilemappings-0500" />
        <file-mapping from=".*\.mon$" to="XmlFileModel" id="xmlfilemappings-0600" />
        <file-mapping from=".*\.xmi$" to="XmlFileModel" id="xmlfilemappings-0700" />
        <file-mapping from=".*\.export$" to="XmlFileModel" id="xmlfilemappings-0800" />
        <file-mapping from=".*\.import$" to="XmlFileModel" id="xmlfilemappings-0900" />
        <file-mapping from=".*\.bcfg$" to="XmlFileModel" id="xmlfilemappings-1000" />
        <file-mapping from=".*\.map$" to="XmlFileModel" onParseError="ignore" id="xmlfilemappings-1100" />
        <file-mapping from=".*\.brg$" to="XmlFileModel" id="xmlfilemappings-1200" />
        <file-mapping from=".*\.brgt$" to="XmlFileModel" id="xmlfilemappings-1300" />
        <file-mapping from=".*\.ruleset$" to="XmlFileModel" id="xmlfilemappings-1400" />
        <file-mapping from=".*\.module$" to="XmlFileModel" id="xmlfilemappings-1500" />
        <file-mapping from=".*\.modulex$" to="XmlFileModel" id="xmlfilemappings-1600" />
        <file-mapping from=".*\.composite$" to="XmlFileModel" id="xmlfilemappings-1700" />
        <file-mapping from=".*\.requirements$" to="XmlFileModel" id="xmlfilemappings-1800" />
    </rules>
</ruleset>
