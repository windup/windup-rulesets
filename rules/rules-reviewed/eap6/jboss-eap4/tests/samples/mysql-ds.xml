<?xml version="1.0" encoding="UTF-8"?>
<datasources>

    <local-tx-datasource>
        <jndi-name>DefaultDS</jndi-name>
        <connection-url>jdbc:mysql://localhost:3306/test</connection-url>
        <driver-class>com.mysql.jdbc.Driver</driver-class>
        <user-name>root</user-name>
        <password>jboss</password>
        <valid-connection-checker-class-name>org.jboss.resource.adapter.jdbc.vendor.MySQLValidConnectionChecker</valid-connection-checker-class-name>
        <metadata>
            <type-mapping>mySQL</type-mapping>
        </metadata>
    </local-tx-datasource>

    <local-tx-datasource>
        <jndi-name>dsOracle</jndi-name>
        <connection-url>jdbc:postgres://localhost:3306/test</connection-url>
    </local-tx-datasource>

    <local-tx-datasource>
        <jndi-name>dsOracle</jndi-name>
        <connection-url>jdbc:oracle://localhost:3306/test</connection-url>
    </local-tx-datasource>

    <local-tx-datasource>
        <jndi-name>dsSqlServer</jndi-name>
        <connection-url>jdbc:sqlserver://localhost:3306/test</connection-url>
    </local-tx-datasource>

</datasources>
