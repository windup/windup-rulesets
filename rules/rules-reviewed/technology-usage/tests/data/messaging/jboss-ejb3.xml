<?xml version="1.1" encoding="UTF-8"?>
<jboss:ejb-jar xmlns:jboss="http://www.jboss.com/xml/ns/javaee"
               xmlns="http://java.sun.com/xml/ns/javaee"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xmlns:r="urn:resource-adapter-binding"
               xmlns:p="urn:ejb-pool:1.0"
               xsi:schemaLocation="http://www.jboss.com/xml/ns/javaee http://www.jboss.org/j2ee/schema/jboss-ejb3-2_0.xsd http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"
               version="3.1"
               impl-version="2.0">

    <jboss:enterprise-beans>
        <session>
            <ejb-name>JmsManagedSimplePublisherBean</ejb-name>
            <ejb-class>com.softwareaggov.messaging.service.publish.JmsManagedSimplePublisherBean</ejb-class>
            <resource-ref>
                <res-ref-name>jms/someManagedCF</res-ref-name>
                <res-type>javax.jms.QueueConnectionFactory</res-type>
                <jndi-name>java:/jms/AppSimpleTestQueueConnectionFactory</jndi-name>
            </resource-ref>
            <resource-ref>
                <res-ref-name>jms/someManagedSimpleDestination</res-ref-name>
                <res-type>com.sun.genericra.outbound.QueueProxy</res-type>
                <jndi-name>java:/jms/AppSimpleQueue</jndi-name>
            </resource-ref>
            <env-entry>
                <env-entry-name>jmsDeliveryMode</env-entry-name>
                <env-entry-type>java.lang.Integer</env-entry-type>
                <env-entry-value>${jms.publish.deliveryMode}</env-entry-value>
            </env-entry>
            <env-entry>
                <env-entry-name>jmsPriority</env-entry-name>
                <env-entry-type>java.lang.Integer</env-entry-type>
                <env-entry-value>${jms.publish.priority}</env-entry-value>
            </env-entry>
        </session>
        <session>
            <ejb-name>JmsManagedSimpleTopicPublisherBean</ejb-name>
            <ejb-class>com.softwareaggov.messaging.service.publish.JmsManagedSimpleTopicPublisherBean</ejb-class>
            <resource-ref>
                <res-ref-name>jms/someManagedCF</res-ref-name>
                <res-type>javax.jms.QueueConnectionFactory</res-type>
                <jndi-name>java:/jms/AppSimpleTestTopicConnectionFactory</jndi-name>
            </resource-ref>
            <resource-ref>
                <res-ref-name>jms/someManagedSimpleDestination</res-ref-name>
                <res-type>com.sun.genericra.outbound.QueueProxy</res-type>
                <jndi-name>java:/jms/AppSimpleTopic</jndi-name>
            </resource-ref>
            <env-entry>
                <env-entry-name>jmsDeliveryMode</env-entry-name>
                <env-entry-type>java.lang.Integer</env-entry-type>
                <env-entry-value>${jms.publish.deliveryMode}</env-entry-value>
            </env-entry>
            <env-entry>
                <env-entry-name>jmsPriority</env-entry-name>
                <env-entry-type>java.lang.Integer</env-entry-type>
                <env-entry-value>${jms.publish.priority}</env-entry-value>
            </env-entry>
        </session>
    </jboss:enterprise-beans>
    <assembly-descriptor>
        <r:resource-adapter-binding>
            <ejb-name>*</ejb-name>
            <r:resource-adapter-name>umra.rar</r:resource-adapter-name>
        </r:resource-adapter-binding>
        <p:pool>
            <ejb-name>*</ejb-name>
            <p:bean-instance-pool-ref>umra-strict-max-pool</p:bean-instance-pool-ref>
        </p:pool>
    </assembly-descriptor>
</jboss:ejb-jar>
