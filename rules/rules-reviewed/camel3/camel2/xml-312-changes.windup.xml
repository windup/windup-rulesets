<?xml version="1.0"?>
<ruleset xmlns="http://windup.jboss.org/schema/jboss-ruleset" id="xml-312-changes"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <metadata>
        <description>
            Rules for changes between Camel 3.11 and Camel 3.12
        </description>
        <dependencies>
            <addon id="org.jboss.windup.rules,windup-rules-java,3.0.0.Final" />
        </dependencies>
        <sourceTechnology id="camel" versionRange="[3.0,3.12)"/>
        <targetTechnology id="camel" versionRange="[3.12,)" />
    </metadata>
    <rules>
        <rule id="xml-removed-camel312-00001">
            <when>
                <project>
                    <artifact groupId="org.apache.camel.springboot" artifactId="camel-spring-cloud-starter" />
                </project>
            </when>
            <perform>
                <hint title="org.apache.camel.springboot:camel-spring-cloud-starter starter has been removed" effort="7" category-id="mandatory" >
                    <message>`org.apache.camel.springboot:camel-spring-cloud-starter` starter has been removed in Apache Camel 3.12.</message>
                    <link href="https://camel.apache.org/manual/camel-3x-upgrade-guide-3_12.html#_camel_spring_cloud_starter" title="Camel 3 - Migration Guide: Removed starters" />
                </hint>
            </perform>
        </rule>
        <rule id="xml-removed-camel312-00002">
            <when>
                <project>
                    <artifact groupId="org.apache.camel.springboot" artifactId="camel-spring-cloud-consul-starter" />
                </project>
            </when>
            <perform>
                <hint title="org.apache.camel.springboot:camel-spring-cloud-consul-starter starter has been removed" effort="7" category-id="mandatory" >
                    <message>`org.apache.camel.springboot:camel-spring-cloud-consul-starter has been removed in Apache Camel 3.12.</message>
                    <link href="https://camel.apache.org/manual/camel-3x-upgrade-guide-3_12.html#_camel_spring_cloud_starter" title="Camel 3 - Migration Guide: Removed starters" />
                </hint>
            </perform>
        </rule>
        <rule id="xml-removed-camel312-00003">
            <when>
                <project>
                    <artifact groupId="org.apache.camel.springboot" artifactId="camel-spring-cloud-netflix-starter" />
                </project>
            </when>
            <perform>
                <hint title="org.apache.camel.springboot:camel-spring-cloud-netflix-starter starter has been removed" effort="7" category-id="mandatory" >
                    <message>`org.apache.camel.springboot:camel-spring-cloud-netflix-starter` starter has been removed in Apache Camel 3.12.</message>
                    <link href="https://camel.apache.org/manual/camel-3x-upgrade-guide-3_12.html#_camel_spring_cloud_starter" title="Camel 3 - Migration Guide: Removed starters" />
                </hint>
            </perform>
        </rule>
        <rule id="xml-removed-camel312-00004">
            <when>
                <project>
                    <artifact groupId="org.apache.camel.springboot" artifactId="camel-spring-cloud-zookeeper-starter" />
                </project>
            </when>
            <perform>
                <hint title="org.apache.camel.springboot:camel-spring-cloud-zookeeper-starter starter has been removed" effort="7" category-id="mandatory" >
                    <message>`org.apache.camel.springboot:camel-spring-cloud-zookeeper-starter` starter has been removed in Apache Camel 3.12.</message>
                    <link href="https://camel.apache.org/manual/camel-3x-upgrade-guide-3_12.html#_camel_spring_cloud_starter" title="Camel 3 - Migration Guide: Removed starters" />
                </hint>
            </perform>
        </rule>
   </rules>
</ruleset>

